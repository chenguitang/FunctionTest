<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentBackground"
    android:fadingEdge="vertical"
    android:overScrollMode="never"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.posin.fuctiontest.activity.MainActivity">

    <LinearLayout
        android:id="@+id/tfDisplayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSelectPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/port"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />

            <Button
                android:id="@+id/btnSelectBaudrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_btn"
                android:text="@string/baudrate"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />

            <Button
                android:id="@+id/btnOpenClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/selector_btn"
                android:text="Open"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="@dimen/btn_width_two_size"
                android:layout_height="@dimen/btn_height_size"
                android:background="@drawable/selector_btn"
                android:text="@string/exit"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnDataBits"
                android:layout_width="@dimen/btn_width_four_size"
                android:layout_height="@dimen/btn_height_size"
                android:background="@drawable/selector_btn"
                android:text="DataBits:8"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />

            <Button
                android:id="@+id/btnStopBits"
                android:layout_width="@dimen/btn_width_four_size"
                android:layout_height="@dimen/btn_height_size"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_btn"
                android:text="StopBits:1"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />

            <Button
                android:id="@+id/btnParity"
                android:layout_width="@dimen/btn_width_four_size"
                android:layout_height="@dimen/btn_height_size"
                android:background="@drawable/selector_btn"
                android:text="Parity:None"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />

            <Button
                android:id="@+id/btnFlowControl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_btn"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="FlowControl:None"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />

        </LinearLayout>

        <View
            android:id="@+id/View02"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/info_send"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/item_title_size" />

            <RadioGroup
                android:id="@+id/radioGroupSendType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:orientation="horizontal"
                android:textColor="@color/colorBlack">

                <RadioButton
                    android:id="@+id/radioSendTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/text_mode"
                    android:textColor="@color/colorBlack" />

                <RadioButton
                    android:id="@+id/radioSendTypeHex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hex_mode"
                    android:textColor="@color/colorBlack" />
            </RadioGroup>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_btn"
                android:text="@string/send"
                android:textColor="#000"
                android:textSize="@dimen/btn_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="发送的数据"
                android:imeOptions="normal|actionDone"
                android:inputType="textMultiLine"
                android:textColor="@color/colorBlack"
                android:theme="@style/MyEditText">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <View
            android:id="@+id/View01"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="#000000" />

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/info_receive"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/item_title_size" />

            <LinearLayout
                android:id="@+id/radioGroupReceiveType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radioGroupRecvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioRecvTypeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/text_mode"
                        android:textColor="@color/colorBlack" />

                    <RadioButton
                        android:id="@+id/radioRecvTypeHex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hex_mode"
                        android:textColor="@color/colorBlack" />
                </RadioGroup>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height_size"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_btn"
                    android:text="@string/clear"
                    android:textColor="#000"
                    android:textSize="@dimen/btn_txt_size" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextRecv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="接收到的数据"
            android:inputType="textMultiLine"
            android:textColor="@color/colorBlack"
            android:theme="@style/MyEditText" />

    </LinearLayout>

</ScrollView>
